<% include ./header.ejs %>
<div class="col-md-offset-2 col-md-8">
    <!-- include comes here-->


    <!--Show only if authorised-->
    <form action="/posts" method="post">

            <%if(user) { %>
        <h4>    <%=user.username %> says</h4>

        <textarea required class="form-control" maxlength="200" rows="3" placeholder="Say something" name="text"></textarea>
        <input class="btn submit-btn pull-right" type="submit" value="Send!" />
            <%}%>


    </form>

    <div>

    <% for (var chat in chats) { %>
    <% if (chats.hasOwnProperty(chat)) { %>

    <div class="post odd">
        <p>
            <%= chats[chat].text %>
        </p>
        <div class="chatBox">
            <div class="time">
                <%var time = new Date(chats[chat].created_at).toLocaleString()%>
                <%= time %>
            </div>
            <div class="author">
                Posted By @ <%= chats[chat].created_by %>
            </div>
        </div>
    </div>
    <% }} %>
    </div>

</div>
</body>
</html>